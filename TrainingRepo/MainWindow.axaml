<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
        Width="600" Height="400"
        x:Class="TrainingRepo.MainWindow"
        Title="TrainingRepo">
        <Grid  RowDefinitions="Auto, *, Auto">
                <!-- Title bar -->
                <Grid Grid.Row="0"  Background="Orange" Height="40"  ColumnDefinitions=" Auto, Auto, *, Auto, Auto">
                        <Rectangle Grid.Column="0" Fill="Red" Width="40"></Rectangle>
                        <Rectangle Grid.Column="1" Fill="Blue" Width="40"></Rectangle>
                        <StackPanel  Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2"  >
                                <Label FontWeight="Black">APPS-LAB</Label>
                                <Label FontStyle="Italic" >LOUDNESS METER</Label>
                        </StackPanel>
                        <Rectangle Grid.Column="3" Fill="Purple" Width="40"></Rectangle>
                        <Rectangle Grid.Column="4" Fill="Pink" Width="40"></Rectangle>
                </Grid>
                <!-- Main bar -->
                <Grid Grid.Row="1" Background="#333" Grid.ColumnDefinitions="Auto, Auto, *">
                        <!-- Volume Bar -->
                        <Rectangle Grid.Column="0" Fill="Pink" Width="110"></Rectangle>
                        <!-- Details Panel -->
                        <Rectangle Grid.Column="1" Fill="#ccc" Width="140"></Rectangle>
                        <!-- Graph -->
                        <Rectangle Grid.Column="2" Fill="#333" ></Rectangle>

                </Grid>
                <!-- Bottom bar -->
                <Grid Grid.Row="2" Margin="6" ShowGridLines="True" Background="Black" Grid.ColumnDefinitions="Auto,Auto,*,Auto,Auto,Auto,Auto,Auto">
                        <Button Grid.Column="0" Margin="0,0,8,0">Stereo</Button>
                        <Button Grid.Column="1">Youtube</Button>
                        <Button Grid.Column="3" Margin="0,0,8,0">10SEC</Button>
                        <Button Grid.Column="4" Margin="0,0,8,0" >CONTINUOUS</Button>
                        <Rectangle Grid.Column="5" Fill="Orange" Width="30" Margin="0,0,8,0"></Rectangle>
                        <Rectangle Grid.Column="6" Fill="Yellow" Width="30" Margin="0,0,8,0"></Rectangle>

                </Grid>
        </Grid>

</Window>
